<UserControl x:Class="WpfDonutChart.Controls.DonutChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WpfDonutChart.Controls"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             x:Name="donutChart"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">

    <Grid>
        <Canvas x:Name="canvas" />
        <Viewbox x:Name="viewBox" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="Uniform">
            <TextBlock x:Name="textBlock" Text="{Binding Text, ElementName=donutChart}" />
        </Viewbox>
    </Grid>

</UserControl>
